# Application
APP_NAME="Enterprise RAG Chatbot"
APP_VERSION="1.0.0"
DEBUG=True

# Database - eControls
ECONTROLS_DB_HOST=localhost
ECONTROLS_DB_PORT=5432
ECONTROLS_DB_NAME=econtrols_db
ECONTROLS_DB_USER=postgres
ECONTROLS_DB_PASSWORD=your_password_here

# Database - MyKRI
MYKRI_DB_HOST=localhost
MYKRI_DB_PORT=5432
MYKRI_DB_NAME=mykri_db
MYKRI_DB_USER=postgres
MYKRI_DB_PASSWORD=your_password_here

# RAG API Configuration (Enterprise RAG uses Azure OpenAI internally)
RAG_API_BASE_URL=https://your-rag-api.azure.com
RAG_API_BEARER_TOKEN=your_bearer_token_here
RAG_UPLOAD_ENDPOINT=/upload
RAG_QUERY_ENDPOINT=/query

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]